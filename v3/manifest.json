{
	"name":"Video Screenshot Downloader",
	"description":"Save a screenshot of the video playing in original quality without any annoying UI etc.",
	"version":"1.0",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"manifest_version":3,
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Alt+S"
			}
		}
	},
	"background": {
   "service_worker": "background.js"
},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content-script.js"]
		}
	]
}


